<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Reservation ID</th>
      <th>Checkin</th>
      <th>Checkout</th>
      <th>Guest</th>
      <th>Number of Beds</th>
      <th>Beds Reserved</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.id %></td>
        <td><%= reservation.checkin %></td>
        <td><%= reservation.checkout %></td>
        <td><%= reservation.guest.name %></td>
        <td><%= reservation.number_of_beds %></td>
        <td><%= reservation.beds_assigned %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Check In', reservation_check_in_path(reservation), method: :assign_beds %></td>
        <td><%= link_to 'Check Out', reservation_check_out_path(reservation), method: :unassign_beds %></td>
        <td><%= link_to 'Cancel Reservation', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

