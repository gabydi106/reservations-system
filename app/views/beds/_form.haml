= form_with(model: bed, local: true) do |form|
  - if bed.errors.any?
    #error_explanation
      %h2
        = pluralize(bed.errors.count, "error")
        prohibited this bed from being saved:
      %ul
        - bed.errors.full_messages.each do |message|
          %li= message

  = form.fields_for :reservations do |r|
    .field
      = r.label :id
      = r.text_field :id, id: :reservation_id

  .actions
    = form.submit
